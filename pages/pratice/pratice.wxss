}
.path{
  flex: 1; display: flex; align-items: center; justify-content: center; 
}
.path_txt {
  display: flex; text-align: center; flex: 1; flex-direction: column; font-size: 26rpx; 
}
.path_txt:nth-child(1),.path_txt:nth-child(2){border-right: 1rpx solid #ccc;}
.user_Btn {border: 1rpx solid red; border-radius: 8rpx; display: flex; padding: 5rpx; align-items: center; justify-content: center; color: #fb7a9f;}
.countDownTimeView{display: flex; justify-content: center;}
.year {display: flex; align-items: center; font-size: 22rpx;}
.voteText{background-color: aqua; margin-right: 16rpx; padding: 10rpx 10rpx; font-size: 24rpx; border-radius: 20rpx;}

.publish {position: fixed; right: 40rpx; bottom: 50rpx;}
.publish .service {height: 90rpx; align-items: center;}
.publish image { height: 100%;}
.service {position: relative;animation: dh linear 1s infinite alternate;}
.service .btn {position: absolute; width: 100%; height: 100%;  opacity: 0;}