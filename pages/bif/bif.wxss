.content{
  display: flex;
  height: 300rpx;
  width: 100%;
  justify-content: space-between;
	border-bottom: 1rpx solid rgba(73, 14, 71, 0.801);
}
.background{
  display: flex;
  height: 360rpx;
  width: 100%;
}
.content-left{
  display: flex;
